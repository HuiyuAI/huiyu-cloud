<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huiyu.service.core.mapper.IntegralRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResult" type="com.huiyu.service.core.entity.IntegralRecord">
        <result column="id" property="id"/>
        <result column="record_no" property="recordNo"/>
        <result column="user_id" property="userId"/>
        <result column="fraction" property="fraction"/>
        <result column="operation_type" property="operationType" jdbcType="INTEGER"/>
        <result column="operation_source" property="operationSource"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <insert id="insertRecord">
        insert into t_integral_record
            (record_no, user_id, fraction, operation_type, operation_source)
            values
            (#{integralRecord.recordNo},#{integralRecord.userId},#{integralRecord.fraction},#{integralRecord.operationType},#{integralRecord.operationSource})

    </insert>


    <update id="update">

        update t_integral_record
        <set>
            <if test="recordNo != null">
                record_no = #{recordNo},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="fraction != null">
                fraction = #{fraction},
            </if>
            <if test="operationType != null">
                operation_type = #{operationType},
            </if>
            <if test="operationSource != null">
                operation_source = #{operationSource},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where record_no = #{recordNo}
    </update>

    <select id="getByUserId" resultMap="baseResult">
        select *
        from t_integral_record where user_id = #{userId};
    </select>


</mapper>
