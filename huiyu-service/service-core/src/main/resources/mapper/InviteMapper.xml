    <select id="queryAll" resultMap="inviteMap">
        select *
        from invite
        where is_delete = 0
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="invitersId != null">
            and inviters_id = #{invitersId}
        </if>
        <if test="inviteesOpenid != null">
            and invitees_openid = #{inviteesOpenid}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
    </select>
</mapper>
