<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huiyu.service.core.mapper.TaskMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="taskMap" type="com.huiyu.service.core.entity.Task">
        <result column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="body" property="body"/>
        <result column="status" property="status"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <insert id="insertTask">
        insert into t_task
            (url, body, status, user_id, create_time, update_time, is_delete)
        values
            (#{url},#{body},#{status},#{userId},#{createTime},#{updateTime},#{isDelete})
    </insert>

    <select id="getByStatus" resultMap="taskMap">
        select *
        from t_task
        where is_delete = 0
          and status = #{status}
        ORDER BY create_time desc
        limit #{n}
    </select>

    <update id="update">
        update t_task
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="body != null and body != ''">
                body = #{body},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
